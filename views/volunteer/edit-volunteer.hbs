<a href="/logout" class="btn btn-secondary" id="transparent-btn">Logout</a>
<a href="/volunteer" class="btn btn-secondary" id="transparent-btn"> Back to dashboard ◀ </a>

<hr>
<h1>Edit your profile</h1>
<p class="copy"> Wanna change something?

  <hr>
  <hr class="hidden">

</p>

<div>
  <form method="POST" action="/volunteer/{{ volunteer._id }}/edit-volunteer" class="form-group">

    <label class="copy">Name</label>
    <input type="text" name="name" value="{{ volunteer.name }}" class="form-control">

    <br>

    <label class="copy">City</label>
    <select class="form-control" name="city">
      <option value="{{ volunteer.city }}">{{ volunteer.city }}</option>
      <option value="Amsterdam">Amsterdam</option>
      <option value="Berlin">Berlin</option>
      <option value="Dublin">Dublin</option>
      <option value="Hamburg">Hamburg</option>
      <option value="Lisbon">Lisbon</option>
      <option value="Ljubljana">Ljubljana</option>
      <option value="London">London</option>
      <option value="Madrid">Madrid</option>
      <option value="Paris">Paris</option>
      <option value="Prague">Prague</option>
      <option value="Rome">Rome</option>
      <option value="Stockholm">Stockholm</option>
      <option value="Vilnius">Vilnius</option>
    </select>

    <br>

    <button type="submit" class="btn btn-primary" id="transparent-btn">Edit</button>

  </form>
</div>

<hr>

<div class="form-group">
  <p class="copy3"> → To change your password, please verify your old one first
  </p>

  <form method="POST" action="/volunteer/edit-volunteer-verify-password">
    <label class="copy">Old password</label>
    <input type="password" name="submittedPassword" class="form-control">
    <button type="submit" class="btn btn-primary" id="transparent-btn">Verify</button>
  </form>

  <br>


  {{#if passwordMessage}}

  <div class="alert alert-success" role="alert">
    {{passwordMessage}}
  </div>

  <form method="POST" action="/volunteer/edit-volunteer-password">
    <label class="copy">New password</label>
    <input type="password" name="newPassword" class="form-control">
    <button type="submit" class="btn btn-primary">Change password</button>
  </form>

  {{else}}
  {{#if errorMessage}}
  <br>
  <div class="alert alert-danger" role="alert">
    {{errorMessage}}
  </div>
  {{/if}}

  {{/if}}


  {{#if successMessage}}
  <div class="alert alert-success" role="alert">
    {{successMessage}}
  </div>
  {{/if}}
</div>