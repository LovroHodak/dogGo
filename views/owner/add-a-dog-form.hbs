<h1>Add a dog </h1>
<p class="copy"> Fill some information about your dog for volunteers to find it.
</p>


{{#if imagePath}}
<img src="{{imagePath}}" alt="">

{{else}}

<form method="POST" action="/upload" enctype="multipart/form-data">
      <input type="file" name="imageUrl" >
      <button type="submit" class="btn btn-secondary">add an image</button> 
</form> 

{{/if}}

<form method="POST" action="/owner/add-a-dog" class="form-group">
<input type="hidden" name="imageUrl" value="{{imagePath}}">

  <br>


  <label>Name</label>
  <input type="text" name="name" placeholder="Enter dog's name" class="form-control">

  <br>

  <label>Breed</label>
  <input type="text" name="breed" placeholder="Enter dog's breed" class="form-control">

  <br>

  <label>Size</label>
  {{!-- <input type="text" name="size" placeholder="Enter dog's size">   --}}
  <select name="size" id="doggoSize" class="form-control">
    <option value="Small">Small</option>
    <option value="Medium">Medium</option>
    <option value="Large">Large</option>
    <option value="More To Love">More To Love</option>
  </select>

  <br>

  <label>Age</label>
  <input type="text" name="age" placeholder="Enter dog's age" class="form-control">

  <br>

  <label>Gender</label>
  {{!-- <input type="text" name="gender" placeholder="Enter dog's gender"> --}}
  <select name="gender" id="doggoGender" class="form-control">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
    <option value="N/A">N/A</option>
  </select>

  <br>

  <label>Description</label>
  <br>
  <input type="text" name="description" placeholder="Enter description" class="form-control">

  <br>

  <label>City</label>
  <br>
  <input type="text" name="city" placeholder="Enter city dog is located in" class="form-control">

  <div class="checkbox">
      {{!-- <input type="checkbox" name="foster" value="true" class="form-control">Foster --}}
      {{!-- <input type="checkbox" name="walkies" value="true" class="form-control">Walkies --}}

  <div class="form-check">
    <input class="form-check-input" type="checkbox" name="foster" value="true" id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1" > <p class="copy"> Foster </p> </label>
    
    
  </div>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" name="walkies" value="true" id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1"> <p class="copy"> Walkies </p></label>
  </div>

  </div>


  <br>

  <input type="hidden" name="myOwner" value={}>
  <button type="submit" class="btn btn-primary">Add a dog!</button>

</form>

{{#if errorMessage}}
{{errorMessage}}
{{/if}}